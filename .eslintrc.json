{
    "env": {
        "es2021": true,
        "node": true
    },
    "globals": {
        "gt": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-typescript/base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "import/named": "off",
        "linebreak-style": "off",
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "error",
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ],
        "camelcase": "off",
        "consistent-return": "error",
        "class-methods-use-this": "off",
        "dot-notation": "off",
        "semi": "error",
        "multiline-ternary": "off",
        "no-else-return": "off",
        "no-nested-ternary": "error",
        "no-undef": "error",
        "no-dupe-keys": "error",
        "no-dupe-args": "error",
        "no-duplicate-case": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["warn"],
        "no-constant-condition": "error",
        "no-empty": "warn",
        "no-useless-escape": "warn",
        "no-useless-constructor": "off",
        "no-loop-func": "warn",
        "no-console": "warn",
        "no-debugger": "warn",
        "no-alert": "warn",
        "no-underscore-dangle": "off",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "eol-last": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "@typescript-eslint/indent": ["off"],
        "func-names": "off",
        "object-shorthand": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "@typescript-eslint/comma-dangle": ["off"],
        "prefer-const": "off",
        "object-curly-newline": [
            "error",
            {
                "minProperties": 5,
                "consistent": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "comments": 120
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-cycle": "off"
    }
}
